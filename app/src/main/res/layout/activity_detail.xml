<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="상세 조회"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.044" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.956" />

            <TextView
                android:id="@+id/tv_serializeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일련번호: "
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/guideline_top" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/warm_grey_two"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/tv_serializeNum" />

            <LinearLayout
                android:id="@+id/linear_condition"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/divider2">

                <TextView
                    style="@style/TextTheme15sp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="위치" />

                <TextView
                    android:id="@+id/tv_locationCity"
                    style="@style/TextTheme15sp"
                    android:text="인천광역시 어쩌고 저쩌고 " />

                <TextView
                    android:id="@+id/tv_locationDetail"
                    style="@style/TextTheme15sp"
                    android:text="정보대 3층 엘베" />

    <!--            <TextView-->
    <!--                android:id="@+id/tv_"-->
    <!--                style="@style/TextTheme15sp"-->
    <!--                android:layout_marginBottom="8dp"-->
    <!--                android:text="시급  />-->
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/warm_grey_two"
                app:layout_constraintTop_toBottomOf="@+id/linear_condition" />

            <TextView
                android:id="@+id/tv_location_info"
                style="@style/TextTheme15sp"
                android:layout_marginTop="16dp"
                android:text="손소독제 잔량 "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <View
                android:id="@+id/view_capacity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHeight_percent="0.262"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_info"/>

            <TextView
                android:id="@+id/tv_totalCapacity"
                style="@style/TextTheme15sp"
                android:layout_marginTop="16dp"
                android:text="총량 : 500ml  현재 : 230ml"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/view_capacity" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/warm_grey_two"
                app:layout_constraintTop_toBottomOf="@+id/tv_totalCapacity" />

            <TextView
                android:id="@+id/content"
                style="@style/TextTheme15sp"
                android:layout_marginTop="16dp"
                android:text="교체 이력"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/divider4" />

            <TextView
                android:id="@+id/tv_history1"
                style="@style/TextTheme15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="8sp"
                android:text="2020.12.01"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/content" />

            <TextView
                android:id="@+id/tv_history2"
                style="@style/TextTheme15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="8sp"
                android:text="2020.12.01"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/tv_history1" />


            <TextView
                android:id="@+id/tv_history3"
                style="@style/TextTheme15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="8sp"
                android:text="2020.12.01"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/tv_history2" />

            <TextView
                android:id="@+id/tv_history4"
                style="@style/TextTheme15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="8sp"
                android:text="2020.12.01"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/tv_history3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>