<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IoTProject" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorMain</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextTheme12sp" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/warm_grey_two</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTheme12sp.center" parent="TextTheme12sp">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/peachy_pink</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2.9dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/rounded_rectangle_outline_11dp</item>
    </style>

    <style name="TextTheme14sp" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>